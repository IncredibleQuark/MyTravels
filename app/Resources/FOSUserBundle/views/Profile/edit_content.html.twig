<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-signin">



    <h2 class="form-signin-heading">Edit Basic Info</h2>

    {{ form_label(form.username, null, { 'label_attr': {'class': 'sr-only'} }) }}
    {{ form_errors(form.username) }}
    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder':"Username"}}) }}


    {{ form_label(form.email, null, { 'label_attr': {'class': 'sr-only'} }) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':"Email address"}}) }}



        {{ form_label(form.current_password, null, { 'label_attr': {'class': 'hidden'} }) }}
        {{ form_widget(form.current_password, { 'attr': {'class': 'hidden form-control',  'placeholder':"Password"} }) }}


    {{ form_widget(form) }}


    <div>
        <input class="btn btn-block btn-lg btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
