{% extends "@FOSUser/layout.html.twig" %}
{% block content %}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title text-center">My Friends</h3>
        </div>
        {% for friend in friends %}
        <div class="panel-body">
            <p class="btn btn-info"><a href="{{ path('mytravel_friend_showuserbyid', {'id': friend.id}) }}">{{ friend.username }}</a></p>
        </div>
                {% endfor %}
    </div>
</div>
{% endblock content %}