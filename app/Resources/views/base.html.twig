<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MyTravels{% endblock %}</title>
        {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
        <link rel="stylesheet" href="{{ asset('foundation-icons/foundation-icons.css') }}">

        {% endblock %}
    </head>
    <body>
{%  include('::navtop.html.twig') %}
        <div class="container">
            {%  block content %}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

            {% else %}
                <div class="jumbotron text-center">
                    <h1>Welcome to myTravels.com!</h1>
                    <p>Clik here to </p>
                    <p><a class="btn btn-primary btn-lg" href="{{ path('fos_user_security_login') }}" role="button">SignUp</a></p>
                    <p>or here to register new account!</p>
                    <p><a class="btn btn-primary btn-lg" href="{{ path('fos_user_registration_register') }}" role="button">Register</a></p>
                </div>
            {% endif %}
            {% endblock %}
        </div>


        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>

        {% endblock %}
{% block additionalscripts %}{% endblock %}
    </body>
</html>
