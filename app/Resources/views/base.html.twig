<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MyTravels{% endblock %}</title>

        <meta name="keywords" content="travel travels journal mytravels trip">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
        <meta property="og:title" content="">
        <meta property="og:type" content="website">
        <meta property="og:url" content="">
        <meta property="og:site_name" content="">
        <meta property="og:description" content="">

        {% block stylesheets %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href="{{ asset("css/font-awesome.min.css") }}">
            <link rel="stylesheet" href="{{ asset("css/animate.css") }}">
            <link href='http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900|Montserrat:400,700' rel='stylesheet' type='text/css'>
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
            <link rel="stylesheet" href="{{ asset('foundation-icons/foundation-icons.css') }}">
        {% endblock %}


        <script src="{{ asset("js/modernizr-2.7.1.js") }}"></script>
    </head>

    <body>
    {%  include('navtop.html.twig') %}

            {%  block content %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                {% else %}
                <header>
                    <div class="container">
                        {#<div class="row">#}
                            {#<div class="col-xs-6">#}
                                {#<a href="#"><img src="{{ asset('images/logo.svg') }}" alt="Logo">MyTravels.com</a>#}
                            {#</div>#}
                            {#<div class="col-xs-6 signin text-right navbar-nav">#}
                                {#<a href="{{ path('fos_user_security_login') }}" class="sign-in">Sign In</a>&nbsp; &nbsp;<a href="#" class="register">Register</a>#}
                            {#</div>#}
                        {#</div>#}

                        <div class="row header-info" id="homepage-content">
                            <div class="col-sm-10 col-sm-offset-1 text-center">
                                <h1 class="wow fadeIn">Welcome to MyTravels</h1>
                                <br />
                                <p class="lead wow fadeIn" data-wow-delay="0.5s">Your best travel journal.</p>
                                <br />

                                <div class="row">
                                    <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1">
                                        <div class="row">
                                            <div class="col-xs-6 text-right wow fadeInUp" data-wow-delay="1s">
                                                <a href="{{ path("fos_user_security_login") }}" class="btn btn-secondary btn-lg sign-in">Sign in</a>
                                            </div>
                                            <div class="col-xs-6 text-left wow fadeInUp" data-wow-delay="1.4s">
                                                <a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary btn-lg scroll">Register</a>
                                            </div>
                                        </div><!--End Button Row-->
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </header>

                <div class="mouse-icon hidden-xs">
                    <div class="scroll"></div>
                </div>

                <section id="press" class="pad-sm">
                    <div class="container">

                        <div class="row margin-30 news-container">
                            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 wow fadeInLeft" data-wow-delay="0.8s">
                                <a href="#" target="_blank">
                                    <img class="news-img pull-left" src="{{ asset('images/press-01.jpg') }}" alt="Tech Crunch">
                                    <p class="black">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam viverra orci ut.<br />
                                        <small><em>Tech Crunch - January 15, 2015</em></small></p>
                                </a>
                            </div>
                        </div>

                        <div class="row margin-30 news-container">
                            <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 wow fadeInLeft" data-wow-delay="1.2s">
                                <a href="#" target="_blank">
                                    <img class="news-img pull-left" src="{{ asset('images/press-02.jpg') }}" alt="Forbes">
                                    <p class="black">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam viverra orci ut. <br />
                                        <small><em>Forbes - Feb 25, 2015</em></small></p>
                                </a>
                            </div>
                        </div>

                    </div>
                </section>

                <footer>
                    <div class="container">

                        <div class="row">
                            <div class="col-sm-8 margin-20">
                                <ul class="list-inline social">
                                    <li>Connect with us on</li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                </ul>
                            </div>

                            <div class="col-sm-4 text-right">
                                <p><small>Copyright &copy; 2017. All rights reserved. <br>
                                        Created by <a href="https://github.com/IncredibleQuark">IncredibleQuark</a></small></p>
                            </div>
                        </div>

                    </div>
                </footer>
            {% endif %}
            {% endblock %}



        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>
            <script src="{{ asset('js/wow.min.js') }}"></script>
            <script src="{{ asset('js/bootstrap.js') }}"></script>
            <script src="{{ asset("js/main.js") }}"></script>
        {% endblock %}
        {% block additionalscripts %}{% endblock %}
    </body>
</html>
